<h1>Listing ambassadors</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone number</th>
      <th>Age</th>
      <th>School</th>
      <th>Activities</th>
      <th>Organizations</th>
      <th>Spread brand</th>
      <th>Freedom meaning</th>
      <th>Hear about</th>
      <th>Address</th>
      <th>Social media</th>
      <th>Ambassador code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ambassadors.each do |ambassador| %>
      <tr>
        <td><%= ambassador.first_name %></td>
        <td><%= ambassador.last_name %></td>
        <td><%= ambassador.email %></td>
        <td><%= ambassador.phone_number %></td>
        <td><%= ambassador.age %></td>
        <td><%= ambassador.school %></td>
        <td><%= ambassador.activities %></td>
        <td><%= ambassador.organizations %></td>
        <td><%= ambassador.spread_brand %></td>
        <td><%= ambassador.freedom_meaning %></td>
        <td><%= ambassador.hear_about %></td>
        <td><%= ambassador.address %></td>
        <td><%= ambassador.social_media %></td>
        <td><%= ambassador.ambassador_code %></td>
        <td><%= link_to 'Show', ambassador %></td>
        <td><%= link_to 'Edit', edit_ambassador_path(ambassador) %></td>
        <td><%= link_to 'Destroy', ambassador, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

